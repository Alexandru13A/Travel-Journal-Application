<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#505050</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#000000</item>
        <item name="android:progressTint">#000000</item>
        <item name="android:colorControlActivated">#515756</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#E2E2E0</item>
        <item name="colorControlActivated">#BCBCC6</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:theme">@style/AppTheme.NoActionBar</item>
        <item name="android:titleTextAppearance">@style/AppTheme.Toolbar.TitleText</item>
    </style>

    <style name="AppTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0sp</item>
    </style>

</resources>